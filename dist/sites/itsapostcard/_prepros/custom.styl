.custom-form
	.row:not(:first-of-type)
		margin-top 40px
	.row
		.row
			padding 5px 0 5px 0
		h1
			margin-top 0
			height 70px
			lh(70)
			&:before
				content '1'
				width 70px
				height 70px
				background gray1
				float left
				color wh
				text-align center
				margin-right 15px
				fnt(700,48)
				lh(70)
		&:nth-of-type(2)
			h1
				&:before
					content '2'
		&:nth-of-type(3)
			h1
				&:before
					content '3'
	.qs-sendto, .qs-message, .customize
		.btn
			width 110%
			margin-right 10px
	.col-md-9
		padding-left 30px
	.customize
		padding 0 !important
		.btn:first-child
			margin-top 0
		.col-md-12
			padding 15px
			.col-md-6
				padding 0
				width 53%
				margin 0 1.5%
			.col-md-3
				padding 0
				&:not(:first-child)
					width 19%
		.select
			margin-bottom 0
			.row
				margin 0
				padding 0
				.choice
					width 16%
					height 55px
					padding-bottom 16%
					margin 3px 2% 20px 2%
					overflow hidden
					float left
					cursor pointer
					img
						width 100%
						min-height 55px
		.bottom
			position relative
			float left
			width 100%
			height 30px
			margin -10px 0 0 0
			z-index 3
			a
				background gray1
				background-image none
				box-shadow none
				height 30px
				width 36%
				margin 0 10px
				text-shadow none
				opacity 1
				fnt2(400,17)
				lh(30)
				i
					padding 0 8px
				&.left
					text-align left
				&.right
					text-align right
					width 36%
			.col-md-6
				padding 0
			.btn
				padding 0
				margin 0 1.5%
				width 98%
				height 30px
				text-align center
				fnt2(400,17)
				lh(30)
				pointer-events none
		.selected
			width 98%
			margin 0 1.5%
			overflow hidden
			max-height 200px
		&.image
			.select
				.carousel-inner
					margin-top -3px
					opacity 0
			.selected
				cursor pointer
				opacity 0
				img
					width 100%
			.form-2
				.col-md-3:nth-child(2)
					.btn
						padding 0
						margin 0 1.5%
						width 98%
						height 40px
						text-align center
						fnt2(400,17)
						lh(40)
						margin-bottom 10px
						color gray1
						&:first-child
							height 55px
							width 150%
							margin 0 0 18px -50%
							color wh
							font-weight 600
							lh(55)
						&.select
							margin-top -30px
							height 30px
							lh(30)
							margin-bottom 15px
							pointer-events none
				.select-image
					margin-top 10px
					.row
						display none
						&.active
							display block
				.bttm
					height 55px
					.btn
						height 55px
						lh(55)
					.pagination
						width 96.4%
						margin 0 2.3%
					.pagination > li > a
						border-top 3px solid blue3
						lh(52)
					.mark5
						width 100%
						text-align center
						padding 0
			.btn
				&.selectpicker
					width 80%
					margin-left 2%
					option[disabled]
						display none
			.caret:not(.small)
				top 21px
				right 135px
		&.color
			.bottom
				margin-top 6px
				a.right
					text-align center
			.btn:first-child
				pointer-events none
			.choice
				&:first-child
					background darken(#222,15%)
				&:nth-child(2)
					background darken(#ccc,5%)
				&:nth-child(3)
					background darken(#f0f0f0,5%)
				&:nth-child(4)
					background darken(#fffece,15%)
				&:nth-child(5)
					background darken(#980000,15%)
			.selected
				padding-bottom 98%
				background darken(#ccc,5%)
			.select
				margin-top -3px
		&.quote
			.col-md-3
				padding-right 0
			.form-1
				input
					text-transform none
					margin-top 0
