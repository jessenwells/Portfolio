.qs-message
	.form-1
			opacity 0
			pointer-events none
			width auto
			float right
	&.send
		.col-md-3:first-child
			.btn
				pointer-events all
				padding-left 15px
		input
			&:focus ~ .save
				color blue1
				border-left 3px solid blue1

#quote-content
	margin-top 10px
	border 3px solid blue3
	width 99.9%
	ul
		display none
		margin 0
		padding 0
		&.active
			display block
		li
			list-style none
			display block
			width 100%
			border-bottom 3px solid blue3
			padding 14px
			text-transform none
			color gray2
			fnt(700,16)
			lh(21)
			cursor pointer
			&:last-child
				border none
			span
				display block
				font-weight 900
				color gray1

.pagination > li > a
	fnt2(700,24)
	lh(55)
	color blue3
	border-radius 0 !important
	padding 0
	width 8.45%
	height 55px
	text-align center
	border 3px solid blue3
	border-top 0
	border-right 0
	transition color 0.25s ease
	cursor pointer
	&:hover
		background wh
		border-color blue3
		color lighten(blue1,40%)
	&.focus
		background blue3
		border-color blue3
		color wh
	&.p-left, &.p-right
		background wh
		color blue3
	&:hover
		background wh
		border-color blue3
		color lighten(blue1,40%)
.pagination
	width 100%
	margin 0
	li:last-child a
		border-right 3px solid blue3

.search-i
	width 100px
	height 49px
	display block
	position absolute
	top 3px
	right 18px
	cursor pointer
	background wh url(../img/search.svg) no-repeat
	background-position-x 25px
	border-left 3px solid blue3
	transition 0.25s all ease
	&:hover
		background wh url(../img/search2.svg) no-repeat
		background-position-x 25px
		border-left 3px solid blue3
.save
	width 150px
	height 49px
	display block
	position absolute
	top 12px
	right 18px
	cursor pointer
	fnt(600,26)
	lh(50)
	text-align center
	color blue2
	border-left 3px solid blue3
	transition 0.25s all ease
	&:hover
		color lighten(blue1,40%)
		border-left 3px solid blue3
.browse
	width 120px
	height 34px
	display block
	position absolute
	top 54px
	right 32px
	cursor pointer
	fnt2(400,18)
	lh(36)
	text-align center
	color blue5
	border-left 3px solid blue3
	transition 0.25s all ease
	&:hover
		color lighten(blue1,40%)
		border-left 3px solid blue3
.customize.image .form-2
	display none
.customize.quote .form-2
	display none
.row .qs-message.send
	.form-1
		margin-right 10px
	.form-2
		width auto
		float right
		.btn
			height 55px
			float left
			width auto
			text-align center
			padding 16px 32px
	.form-0
		opacity 0
		pointer-events none
	.selectpicker.small
		margin-right 0

#box-model.upload, #box-model.category
	.close-x
		top -3px
		right -3px
		opacity 0.4
		&:hover
			opacity 1
	.login-box
		padding 20px
		h4
			margin 0
			fnt(900,18)
			span
				fnt(700,16)
		input[type="text"]
			width 100%
			margin 9px auto
			height 40px
			border 3px solid blue3
			padding-left 12px
			fnt(400,22)
			color blue1
			text-transform none
			transition border-color 0.35s ease
			&:focus
				border-color blue1
				outline 0
				box-shadow none
				~ span
					border-color blue1
					color blue1
			&::placeholder
				color blue3
		.col-md-12
			margin 20px -15px 20px -15px
			.col-sm-4
				padding 15px 34px
				&:first-child
					padding-left 15px
				&:last-child
					padding-right 0
		.btn-success
			float right
			margin 10px 0 0 0
		.form
			.login-controls
				input[type='checkbox']
					display none
				label
					display block
					position relative
					width 20px
					height 20px
					border solid 2px blue2
					cursor pointer
					margin-bottom 10px
					&:after
						content ''
						display none
						width 16px
						height 16px
						border solid 2px wh
						background blue1
						margin-top -20px
					span
						margin-left 25px
#box-model.zoom
	.login-box
		width auto
	.form
		padding 20px
	img#image-zoom
		width 450px
		height 450px
#box-model.delete
	.login-box
		width 450px
	.form
		padding 20px
		h4
			margin 0
			fnt(900,18)
			span
				fnt(700,16)
		.btn
			float right
			margin 15px 5px
			padding 10px 40px
#box-model.upload
	.form
		h4
			margin-top 5px
			span
				display block
	.login-box .col-md-12
		margin-top 0
		margin-bottom 0
	.btn
		margin-top 0
.froala-editor
	&.f-inline
		border none
		&:before
			border-top-color blue3
			border-bottom-color blue3
	.froala-popup.froala-link-popup
		border 3px solid blue3
		margin-top -4px
		button
			padding 6px 20px
			&.fr-p-bttn
				text-transform uppercase
				fnt(700,14)
				transition 0.25s all ease
				&:first-of-type
					background gray1
					color wh
					&:hover
						background darken(gray1,18%)
				&:last-of-type
					background blue4
					color gray1
					&:hover
						background lighten(blue1,5%)
						color wh
		h4 i
			color blue4
			&:hover
				color blue1
		h4 span
			display none
		a.f-external-link
			display none
		.f-popup-line
			input[type=checkbox]
				display none
			label
				display none
			input[type=text]
				border 3px solid blue3
				padding 16px 14px
				fnt(700,15)
				text-transform uppercase
				color blue1
				&::placeholder
					color blue3
				&:focus
					border 3px solid blue1

