					color blue3
				&:nth-child(3)
					background blue4
					color blue3
			.form-0
				opacity 1
				pointer-events all
			.form-1
				opacity 0
				pointer-events none
			.form-2
				.btn:first-child
					background gray4
					pointer-events none
				.btn:nth-child(2)
					background gray4
					pointer-events none

