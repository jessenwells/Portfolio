    section#step.one
      .container
        .row
          h2 Step 1 of 3:  
            span Tell us about yourself
          form#register
            .col-md-5.col-md-offset-1
              label Your Name
              input(type='text' placeholder='First Name' name='first')
            .col-md-5.lastname
              label Last Name
              input(type='text' placeholder='Last Name' name='last')
            .col-md-5.col-md-offset-1.dob
              label Your Birthday
              input#bd-month(type='text' placeholder='MM' maxlength='2' name='month')
              input#bd-day(type='text' placeholder='DD' maxlength='2' name='day')
              input#bd-year(type='text' placeholder='YEAR' maxlength='4' name='year')
            .col-md-5.gender
              label Gender
              label.radio-inline(for='male')
                input(id='male' type='radio' name='gender')
                span Male
              label.radio-inline(for='female')
                input(id='female' type='radio' name='gender')
                span Female
            .col-md-5.col-md-offset-1.email
              label Your Email Address
              input(type='text' placeholder='Email' name='email')
              span.error
            .col-md-5
              label Your Zip Code
              input(type='text' placeholder='Zipcode *' maxlength='5' name='zipcode')
