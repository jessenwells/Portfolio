// Colors
bg = #282e3b
clr1 = #27CCAC
clr2 = #f7C65D
clr3 = #19BA9B
clr4 = #F7BD41
clr5 = #989FAC
clr6 = #CCCCCC

wh = #FFFFFF

//Mixins
fnt(w,s)
  font w (s)px 'Lato', sans-serif
lh(lh)
  line-height (lh)px

/* ///// MAIN ///// */
html
  width 100%
  height 100%

body
  width 100%
  height 100%
  fnt(300,14)
  color bl

a
  color clr3
  text-decoration none
  &:hover
    color clr1
    text-decoration none

h1
  font-weight 300
  font-size 3em

/* ///// HEADER ///// */

/*! // NAVIGATION // */

.navbar
  background bg

.navbar-fixed-top
  border-width 0

.navbar-nav
  float right
  padding-top 18px

.navbar-nav > li .btn:first-child
  margin-right 8px
  margin-left 8px

.navbar-nav > li .btn
  padding-top 5px
  color clr2

.navbar-nav > li.mobile
  display none

.navbar-inverse .navbar-nav > li > a
  padding 6px 8px
  text-transform uppercase
  color wh
  transition color 0.25s ease
  fnt(300,16)
  lh(22)
  &:hover
    color clr1

.top-nav-collapse .navbar-nav
  padding-top 7px

/*! BUTTONS */

.btn
  text-transform uppercase
  fnt(300,16)
  lh(20)
  background transparent
  border 2px solid wh

.sharp
  border-radius 0

.row
  animation fadein 0.5s 0.5s forwards

button:focus
  outline 0 !important

.btn.log, .btn.join
  transition border 1s ease

.btn.log:hover
  background clr4
  border-color clr4
  color bg
  transition background 0.35s ease

.btn.join:hover
  background clr3
  border-color clr3
  color wh
  transition background 0.35s ease

/*! MOBILE MENU */

.navbar-toggle .icon-bar
  width 40px
  height 5px

.navbar-toggle .icon-bar + .icon-bar
  margin-top 7px

.navbar-inverse .navbar-toggle
  border 0
  padding 0
  margin 0
  width 86px
  height 86px
  padding-left 30px
  border-radius 0
  .icon-bar
    background clr1
  &:hover, &:focus, &:active
    background transparent
.navbar-inverse .navbar-toggle.xx
  background lighten(bg,10%) !important
  &:hover, &:focus, &:active
    background lighten(bg,10%) !important

.navbar-collapse
  border 0
  box-shadow none

/*! SVG LOGO */

svg
  height 72px

.svg-logo
  position relative
  top 10px
  left -32px
  width 30%

.logo-left
  height 72px
  width 72px
  position absolute
  top -20px
.logo-right
  height 72px
  width 219.5px
  position relative
  left -12px
  top -18px

.logo1a, .logo2b
  fill clr1

.logo1b, .logo2a, .logo3
  fill wh

/* ///// CONTENT ///// */

section
  overflow hidden

