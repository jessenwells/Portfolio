  height 225px
  background bg
  .copyright
    font-size 14px
    margin-top 72px
    a
      float left
    span
      color clr5
    .cc
      clear left
      font-size 18px
      text-transform uppercase
      padding-top 10px
    .tnc
      padding-top 5px
  .logo-bttm
    background url(../img/logo-bttm.png)
    width 200px
    height 150px
    position absolute
    top 25px
    right 0

/* // CHARITY CAROUSEL // */

.carousel-control, .carousel-control.right, .carousel-control.left
  background transparent
  background-image none
  width 50px
  height 50px
  font-size 50px
  top -65px
  text-shadow none
  font-family Futura

.carousel-control.right
  right 0

.carousel-control.left
  left auto
  right 30px

/* ///// ANIMATION ///// */

@keyframes fadein
  100%
    opacity: 1

/* // MOBILE TOGGLE // */

.navbar-toggle.xx
  border: none
  background: transparent !important
  &:hover
    background: transparent !important
  .icon-bar
    width: 46px
    transition: all 0.2s
  .top-bar
    transform: rotate(45deg)
    transform-origin: 10% 10%
  .middle-bar
    opacity: 0
  .bottom-bar
    transform: rotate(-45deg)
    transform-origin: 10% 90%
.navbar-toggle.yy
  .icon-bar
    transition: all 0.2s
  .top-bar
    transform: rotate(0)
  .middle-bar
    opacity: 1
  .bottom-bar
    transform: rotate(0)


