//Colors
gray1 = #37474f
gray2 = #455a64
gray3 = #cfd8dc
gray4 = #dee4e7

blue1 = #325b6d
blue2 = #79bbce
blue3 = #cee4eb
blue4 = #619bae
blue5 = #a4d0dc

bg1 = #d9eef1
bg2 = #c8e9ed
bg3 = linear-gradient(bottom, #cee4eb, #d9eef1)
bg4 = linear-gradient(top, #cee4eb, #d9eef1)

wh = #ffffff
//Mixins
fnt(w,s)
  font w (s)px 'Lato', sans-serif
fnt2(w,s)
  font w (s)px 'Montserrat', sans-serif
lh(lh)
  line-height (lh)px

/* ////////// MAIN ////////// */
body
  background gray4
  text-transform uppercase
  color gray1
a
  text-decoration none !important

h1, h2
  font-family 'Montserrat', sans-serif
  font-weight 700

::selection
  background blue3

option:hover
  background blue3
.hid
  display none
.row
  margin 0
.col-md-12
  padding 0
.container > .navbar-collapse
    margin-left 0
    margin-right 0
    padding-left 0
    padding-right 0
header
  height 70px

/* // BUTTONS // */

.btn
  text-transform uppercase
  fnt2(400,15)
  lh(20)
  border 0
  transition 0.25s all ease
  &-success
    padding 10px 40px
    background blue1 !important
    transition 0.25s all ease
    &:hover
      background darken(blue1,26%) !important
  &.mark1
    background blue1
    color wh
    &:hover
      background darken(blue1,26%)
  &.mark2
    background blue4
    color gray1
    &:hover
      background lighten(blue1,5%)
      color wh
  &.mark3
    background gray1
    color wh
    &:hover
      background darken(gray1,18%)
  &.mark4
    background wh
    border 3px solid blue3
    color blue5
  &.mark5
    background #e05543 !important
    color wh !important
    &:hover
      background darken(#e05543,18%) !important
.caret
  border-top 16px solid
  border-right 16px solid transparent
  border-left 16px solid transparent
  border-radius 5px
  color blue5
  position absolute
  top 30px
  right 50px
  pointer-events none
  cursor pointer
  transition all 0.25s ease
button:focus
  outline 0 !important
.sharp
  border-radius 0

/* // NAVIGATION // */

.navbar
  background transparent
  height 70px
  border 0
  margin 0 auto !important
  padding 0 !important

.navbar-header
  width 440px
  height 70px

.navbar-header.alt
  width 482px
  height 70px
  background wh
  border-right 1px solid gray3

.navbar-brand
  margin-left 0 !important

.navbar-brand img
  width 100%

.navbar-nav
  > li
    border-right 1px solid gray3
    a
      padding 0 30px
      height 70px
      fnt(500,20)
      lh(70)
      color gray1 !important
      transition 0.25s color ease
      &:hover
        color blue2 !important
    &:last-child
      background blue1
      &:hover
        background darken(blue1,12%) !important
      a
        fnt(600,23)
        lh(70)
        color wh !important
        &:hover
          color blue3 !important
      span
        text-transform lowercase

.navbar-nav.navbar-right:last-child
  margin-right 0 !important

.mobile-signin
  display none
  background blue1
  text-align center
  a
    fnt(600,23)
    lh(50)
    color wh !important
    &:hover
      color blue3 !important
  span
    text-transform lowercase

.navbar-default .navbar-toggle .icon-bar
  width 40px
  height 5px
  border-radius 4px
.navbar-toggle .icon-bar + .icon-bar
  margin-top 7px

.navbar-default .navbar-toggle
  border 0
  padding 0
  margin 0
  width 70px
  height 70px
  padding-left 16px
  border-radius 0
  .icon-bar
    background wh
  &:hover, &:focus, &:active
    background transparent
.navbar-default .navbar-toggle
  background blue2 !important
  &:hover, &:focus, &:active
    background blue2

.navbar-collapse
  border 0
  box-shadow none

/* MOBILE TOGGLE */

.navbar-toggle.opened
  padding-left 19px
  &:hover
    background blue2 !important
  .icon-bar
    width: 46px
    transition: all 0.2s
  .top-bar
    transform: rotate(45deg)
    transform-origin: 10% 10%
  .middle-bar
    opacity: 0
  .bottom-bar
    transform: rotate(-45deg)
    transform-origin: 13% 87%
.navbar-toggle.closed
  .icon-bar
    transition: all 0.2s
  .top-bar
    transform: rotate(0)
  .middle-bar
    opacity: 1
  .bottom-bar
    transform: rotate(0)

/* // CONTENT // */

#content
  margin-top 30px

.arrow
  content ' '
  display block
  width 60px
  height 60px
  margin 0 auto
  top 20px
  transform rotate(45deg)
  position relative
  z-index 1

.container
  background wh
  padding 30px
  position relative
  &.fluid
    padding 0
    width 100%
  &.one
    padding-bottom 0
    z-index 5
    &:after
      @extends .arrow
      background wh
  &.two
    padding 0 30px
    z-index 4
    &:after
      @extends .arrow
      background gray1
  &.three
    padding-top 0
    z-index 3
    .row
      margin 0
  .row
    position relative
    z-index 2

.graphic
  background wh
  margin-bottom -60px
  overflow hidden
  float left
  img
    width 100%
  > div
    width 33.33%
    float left
  .two
    width 48.5%
    margin 1px -8% 0 -7.25%
    z-index 6
  .three
    float right

.intro
  background gray1
  color wh
  margin-bottom -60px
  padding-bottom 15px
  text-align center
  h1
    margin 0
    padding 0
    margin-top -2px
    padding-top 45px
    font-size 29px
  p
    fnt(400,18)
    text-transform none
    width 96%
    margin 4px auto 0 auto

.blocks
  float left
  background linear-gradient(180deg, rgba(206, 228, 235, 1) 0%, rgba(217, 238, 241, 0.8) 100%)
  > div
    margin-top -10px
    margin-bottom 10px
    text-align center
    &:nth-child(3) img
      width 225px
    &:nth-child(2) img
      width 145px
    &:last-child img
      width 135px
  h1
    font-size 36px
    text-align center
    margin-top  50px
  h2
    font-size 18px
    background blue4
    padding 13px 0
    margin-bottom 0
    letter-spacing -1px
  p
    fnt(400,18)
    text-transform none
    background wh
    margin-top 0
    padding 10px 20px 20px
    margin 0 0 5px

/* Responsive Line Break */

.rlbreak
  display none

.intro p .rlbreak
  margin-top 10px

footer .container
  padding 0
  margin-top 60px
footer .social-icons ul
  -webkit-padding-start 0
  -webkit-margin 0

footer .social-icons, footer .social-icons li
  float right

footer .social-icons li
  list-style none
  border-left 1px solid gray3
  &:first-of-type
    border-right 1px solid gray3
  a
    transition opacity 0.25s ease
    &:hover
      opacity 0.86

.footer-logo
  float left
  border-right 1px solid gray3
  padding-right 40px

footer span
  fnt(300,16)
  lh(80)
  float left
.siteinfo
  margin 0 auto
  float right
  padding-right 3%

footer
  background wh

/* // BOX MODEL LOGIN FORM // */

#box-model
  display none
  position fixed
  z-index 9998
  width 100%
  height 100%
  background rgba(gray1,0.8)
  .close-x
    width 34px
    height 34px
    display block
    position absolute
    top -5px
    right -5px
    cursor pointer
    background url(../img/close.svg) no-repeat
    transition 0.25s all ease
    opacity 0.4
    &:hover
      opacity 0.8
  .bg
    width 100%
    height 100%
    cursor pointer
  .login-box
    position fixed
    top 10%
    left 50%
    margin-left -225px
    width 450px
    height auto
    background wh
    box-shadow 0 2px 15px 2px rgba(gray1,0.7)
    transition 0.25s all ease
    input[type='radio'], input[type='file']
      display none
    form
      input
        width 80%
        margin 15px auto
        height 45px
        border 2px solid blue3
        padding-left 12px
        fnt(400,22)
        color blue1
        text-transform uppercase
        transition border-color 0.35s ease
        &:focus
          border-color blue1
          outline 0
          box-shadow none
        &::placeholder
          color blue3
        &:nth-child(odd)
          margin-bottom 25px
      .login-controls
        width 80%
        margin 0 auto
        input
          height 20px
          width 20px
          margin-right 10px
        span
          width 100%
          display block
          fnt(400,13)
          text-transform initial
          color blue2
        .btn
          float right
          margin-bottom 30px
        .forgot
          fnt(400,13)
          lh(62)
          color blue2
        input[type='checkbox']
          opacity 0
        label
          display block
          position relative
          width 20px
          height 20px
          border solid 2px blue2
          margin -32px 0 14px 0
          cursor pointer

  .login-header
    height 60px
    background gray1
    h2
      float left
      margin 0 0 0 10px
      fnt(700,21)
      lh(64)
      text-transform uppercase
      color lighten(gray2,24%)
      span
        color blue4
    img
      float left
      margin-left 5px
  .login-nav
    width 80%
    margin 0 auto
    padding-top 15px
    height 60px
    label
      fnt2(700,14)
      margin 0 30px 10px 5px
      cursor pointer
      transition 0.25s color ease
      &:last-of-type
        color blue3
  .login-nav-bar
    height 4px
    background blue3
  .login-nav-tab
    position relative
    height 8px
    width 66px
    background blue1
    top -2px
    left 0
    transition 0.25s left ease

form#join
  display none
  .btn
    background blue3 !important
#box-model .login-box form#join .login-controls
  .btn
    margin-bottom 0
    margin-top -50px
  span
    margin-bottom 30px

/* LOGIN FORM IF CHECKED */

input#agree:checked ~
  label
    &:after
      content ''
      display block
      width 16px
      height 16px
      border solid 2px wh
      background blue1
  .btn
    background blue1 !important
    &:hover
      background darken(blue1,26%) !important
input#join:checked ~
  .login-nav .login-nav-bar .login-nav-tab
    left 94px
    width 120px
  .login-nav label:last-of-type
    color gray1
  .login-nav label:first-of-type
    color blue3
  form#sign
    display none
  form#join
    display block

