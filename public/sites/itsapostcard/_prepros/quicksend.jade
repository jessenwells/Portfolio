  body
    // Login Popup
    #box-model
      .bg
      .login-box
        .close-x
        input(id='sign' type='radio' name='sign-join' checked)
        input(id='join' type='radio' name='sign-join')
        .login-header
          img(src='img/login-logo.png')
          h2 welcome to 
            span itsapostcard.com
        .login-nav
          label(for='sign') sign in
          label(for='join') new account
          .login-nav-bar
            .login-nav-tab  
        form#sign(class="form-horizontal" role="form")
          input#login-username(type="text" class="form-control sharp" name="username" value="" placeholder="email")
          input#login-password(type="password" class="form-control sharp" name="password" placeholder="password")
          .login-controls
            a.forgot Forgot Your Password?
            a#btn-login(href="#" class="btn btn-success sharp") Sign In
        form#join
          input#login-username(type="text" class="form-control sharp" name="username" value="" placeholder="email")
          input#login-password(type="password" class="form-control sharp" name="password" placeholder="create password")
          input#login-password(type="password" class="form-control sharp" name="password" placeholder="confirm password")
          .login-controls
            input(id='agree' type='checkbox' name='agree')
            label(for="agree")
            a#btn-login(href="#" class="btn btn-success sharp") Register
            span I  agree to use this site in accordance with all terms of use and will not use it to send offensive, copy-protected, or illegal images or messages of any kind.
          
