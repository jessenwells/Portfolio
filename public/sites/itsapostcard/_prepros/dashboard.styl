/* PIE CHART */
svg.peity
  z-index 2
  position relative
svg.peity path:nth-child(1)
  stroke-width 8px
  stroke #fff
svg.peity path:nth-child(2)
  stroke-width 4px
  stroke #fff
  stroke-dash-array 100
  transform rotate(-90deg)
  transform-origin 50% 49%
  animation pierotate 0.5s 1s forwards
.svgbg
  width 176px
  height 176px
  background bg1
  border-radius 50%
  position absolute
  top 80px
  left 50%
  margin-left -88px
  z-index 0

@keyframes pierotate
  100%
    transform rotate(0deg)
