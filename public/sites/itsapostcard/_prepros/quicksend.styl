.quicksend-form
  input[type="radio"]
    display none
  .row
    background bg4
    padding 15px
    .row
      background wh
      margin-bottom 45px
      &:last-child
        margin-bottom 0
  h1
    margin 15px 0
    fnt2(700,44)
  .btn
    width 100%
    padding 16px 0 16px 20px
    margin 9px 0
    fnt2(400,19)
    text-align left
    transition 0.25s all ease
    &.mark2
      color blue3
    &.mark4
      fnt(600,26)
      padding 0
      height 55px
      width 110px
      text-align center
      float right
      &:hover
        color blue1
        border-color blue1
  .selectpicker
    height 55px
    background wh
    padding 0 12px
    border 3px solid blue3
    fnt(400,26)
    color blue3
    text-transform uppercase
    transition border-color 0.25s ease
    -webkit-appearance none
    -moz-appearance none
    appearance none
    option
      color blue1
      &:disabled
        color transparent
        opacity 0
        pointer-events none
        &:hover
          outline none
          background transparent
    &:focus
      outline 0
      box-shadow none
      border-color blue1
      & ~
       .caret
        border-top-color blue1
        &:after
          background blue1
    &.small
      &:focus
        outline 0
        box-shadow none
        border-color blue1
        & ~
         .caret
            border-top-color blue1
            &.small
              &:after
                background blue1
  input[type="text"]
    width 100%
    margin 9px auto
    height 55px
    border 3px solid blue3
    padding-left 12px
    fnt(400,26)
    color blue1
    text-transform uppercase
    transition border-color 0.35s ease
    &:focus
      border-color blue1
      outline 0
      box-shadow none
    &::placeholder
      color blue3
  .close-x
    width 100px
    height 49px
    display block
    position absolute
    top 12px
    right 18px
    cursor pointer
    background wh url(../img/close.svg) no-repeat
    background-position-x 25px
    border-left 3px solid blue3
    transition 0.25s all ease
    &:hover
      background wh url(../img/close2.svg) no-repeat
      background-position-x 25px
      border-left 3px solid blue3
  .caret:after
    content " "
    display block
    width 3px
    height 55px
    background blue3
    position absolute
    top -37px
    right 50px
    transition all 0.25s ease
  .qs-template
    background wh
    .form-2
      display none
  .qs-contact
    background wh
    .form-2, .form-3
      display none
  .qs-sendto
    .btn
      pointer-events none
    input
      text-transform initial
      pointer-events none
      &::placeholder
        text-transform uppercase
  .qs-message
    .col-md-4:first-child .btn, .col-md-3:first-child .btn
      pointer-events none
    .col-md-12 .col-md-8
      &.form-1
        opacity 0
        pointer-events none
        width auto
        float right
      &.form-2
        width auto
        float right
        .btn
          height 55px
          float left
          width auto
          text-align center
          padding 16px 32px
          &:last-child
            margin-left 20px
    .selectpicker.small
      width 85px
      float left
    input.small
      width 96px
      float left
    .caret.small
      height 55px
      padding-top 26px
      border-top 6px solid
      border-right 6px solid transparent
      border-left 6px solid transparent
      border-radius 2px
      position relative
      top 36px
      right 20px
      float left
      background transparent
      &:last-child
        margin-right -12px
      &:after
        display none
    .froala-wrapper
      margin-bottom 10px

/* // WYSIWYG // */

.froala-wrapper
  border 0 !important
.froala-editor
  border 3px solid blue3
  margin-top 10px
  height 55px
  transition 0.25s all ease
.froala-element
  border 3px solid blue3
  fnt(400,20)
  color gray1
  text-transform initial
  transition 0.25s all ease
  &:focus
    border-color gray1
.fr-bttn i
  font-size 22px
  padding-top 8px
  color blue3
  transition 0.25s all ease
  width 50px
  &:hover
    color blue1
.froala-editor button.fr-bttn:hover
  background transparent !important
.froala-element.f-placeholder+span.fr-placeholder
    padding-left 12px
    fnt(400,20)
    color blue3
    text-transform uppercase
.caret:hover
   border-top-color blue1

/* // QUICKSEND FORM IF CHECKED // */
#manage-template:checked ~
  .row
    .qs-template
      label.btn
        &:first-child
          background blue4
          color blue3
        &:nth-child(2)
          background gray1
          color wh
      .form-1
        display none
      .form-2
        display block
#list-contact:checked ~
  .row
    .qs-contact
      label.btn
        &:first-child
          background blue4
          color blue3
        &:nth-child(2)
          background gray1
          color wh
      .form-1
        display none
      .form-2
        display block
      .form-3
        display none
#new-contact:checked ~
  .row
    .qs-contact
      label.btn
        &:first-child
          background blue4
          color blue3
        &:nth-child(2)
          background blue4
          color blue3
        &:nth-child(3)
          background gray1
          color wh
      .form-1
        display none
      .form-2
        display none
      .form-3
        display block
#send-later:checked ~
  .row
    .qs-message
      label.btn
        &:first-child
          background gray1
          color wh
        &:nth-child(2)
          background blue4
          color blue3
      .form-1
        opacity 1
        pointer-events all
