input#check1:checked ~ label#check1:after, input#check2:checked ~ label#check2:after, input#check3:checked ~ label#check3:after, input#check4:checked ~ label#check4:after
	content ''
	display block
	width 16px
	height 16px
	border solid 2px #fff
	background #325b6d
