.quicksend-form
	.btn.mark4
		width 100%
		line-height 50px
	.btn.mark5, .btn.mark2:not(.sharp)
		text-align center
	input[type='checkbox']
		display none
	label
		display block
		position relative
		width 20px
		height 20px
		border solid 2px #79bbce
		margin 0 0 14px 0
		cursor pointer
		span
			position absolute
			left 25px
	input
		&:focus + span
			border-color #325b6d
			&.close-x
				background #fff url("../img/close2.svg") no-repeat
				background-position-x 25px
			&.search-i
				background #fff url("../img/search2.svg") no-repeat
				background-position-x 25px
	.close-x
		top 85px
.search-i
	top 12px
.col-md-2
	padding-top 12.5px
.pagination
		margin-top 35px
		> li > a
			height 58px
			border-top 3px solid #cee4eb
p
	color #455a64
	font 500 16px 'Lato' sans-serif
	line-height 21px

